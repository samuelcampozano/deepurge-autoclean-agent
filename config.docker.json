{
    "agent_name": "Deepurge AutoClean Agent",
    "version": "1.0.0",
    "author": "Samuel Campozano Lopez",
    
    "folders": {
        "watch_folder": "/data/Downloads",
        "organized_folder": "/data/Organized"
    },
    
    "scan_interval_seconds": 60,
    "min_file_age_seconds": 5,
    
    "categories": {
        "Images": [".jpg", ".jpeg", ".png", ".gif", ".webp", ".svg", ".bmp", ".ico", ".tiff"],
        "Documents": [".pdf", ".docx", ".doc", ".txt", ".md", ".xlsx", ".xls", ".pptx", ".ppt", ".odt", ".rtf", ".csv"],
        "Videos": [".mp4", ".avi", ".mov", ".mkv", ".wmv", ".flv", ".webm", ".m4v"],
        "Audio": [".mp3", ".wav", ".flac", ".aac", ".ogg", ".wma", ".m4a"],
        "Code": [".py", ".js", ".ts", ".html", ".css", ".java", ".cpp", ".c", ".h", ".json", ".xml", ".yaml", ".yml", ".sol", ".move", ".rs"],
        "Archives": [".zip", ".rar", ".tar", ".gz", ".7z", ".bz2"],
        "Executables": [".exe", ".msi", ".bat", ".cmd", ".ps1", ".sh"],
        "Other": []
    },
    
    "ignore_patterns": [".tmp", ".crdownload", ".partial", "~$", ".download"],
    
    "walrus": {
        "enabled": true,
        "network": "testnet",
        "aggregator_url": "https://aggregator.walrus-testnet.walrus.space",
        "publisher_url": "https://publisher.walrus-testnet.walrus.space",
        "batch_upload_threshold": 100,
        "daily_report": true
    }
}
